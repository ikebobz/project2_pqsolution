<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical">
    <TextView
        android:id = "@+id/fv_resultx"
        android:layout_width="match_parent"
        android:layout_height = "wrap_content"
        android:textSize = "16sp"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="5dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="10">
        <TextView
            android:id = "@+id/fv_qbody"
            android:layout_width="match_parent"
            android:layout_height = "wrap_content"
            android:textSize = "20sp"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="10dp"/>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toggle Question and Answer"
            android:id = "@+id/shwans"
            android:onClick="fvtoggle"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:id = "@+id/fv_next"
            android:onClick="fvForward_click"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous"
            android:id = "@+id/fv_prev"
            android:onClick="fvBack_click"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Table"
            android:id = "@+id/fv_table"
            android:layout_marginStart="15dp"
            android:onClick="fvgetTables"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image"
            android:id = "@+id/fv_image"
            android:onClick="fvimgvwrClicked"
            />
    </LinearLayout>
    </LinearLayout>
    <Button
        android:id = "@+id/fv_resultc"
        android:textSize = "16sp"
        android:textAlignment = "center"
        android:background = "@drawable/rbutton"
        android:layout_width = "wrap_content"
        android:textColor = "#000"
        android:layout_height = "wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:layout_gravity="top|right"/>
</FrameLayout>